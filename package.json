{
  "name": "char-creator",
  "version": "0.1.0",
  "description": "Website to create roleplaying characters.",
  "licence": "Mozilla Public License 2.0",
  "author": "Marek Meyer <marek_meyer@outlook.com>",
  "bugs": {
    "url": "https://github.com/MrStobbart/char-creator/issues",
    "email": "marek_meyer@outlook.com"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/MrStobbart/char-creator"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run testOnce"
    }
  },
  "private": true,
  "scripts": {
    "start": "npm-run-all -l -p mongodb server client",
    "build": "react-scripts build",
    "mongodb": "mongod --dbpath data/db",
    "client": "react-scripts start",
    "server": "cross-env NODE_ENV=development nodemon --watch 'src/server/*' --exec 'ts-node' '--project' 'tsconfig.node.json' '--files' src/server/server.ts",
    "buildServer": "cross-env NODE_ENV=production ts-node --project tsconfig.node.json --files src/server/server.ts",
    "test": "react-scripts test --env=jsdom",
    "testOnce": "react-scripts test --env=jsdom --watchAll=false",
    "eject": "react-scripts eject",
    "parseRules": "ts-node --project tsconfig.node.json --files src/server/data/extractRules.ts",
    "lint": "eslint . --ext .ts,.tsx",
    "fix": "eslint . --ext .ts,.tsx --fix"
  },
  "dependencies": {
    "@types/react-table": "^6.8.7",
    "antd": "^4.7.2",
    "app-root-path": "^2.2.1",
    "axios": "^0.20.0",
    "body-parser": "^1.19.0",
    "classnames": "^2.2.6",
    "connect-history-api-fallback": "^1.5.0",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "i18next": "^15.1.3",
    "mdtable2json": "^0.1.0",
    "mongodb": "^3.5.4",
    "morgan": "^1.10.0",
    "react": "^16.13.0",
    "react-autosuggest": "^9.4.2",
    "react-dom": "^16.13.0",
    "react-i18next": "^10.13.2",
    "react-markdown": "^4.3.1",
    "react-router-dom": "^4.3.1",
    "react-scripts": "^3.4.0",
    "react-select": "^2.4.4",
    "react-table": "^6.11.5",
    "reinspect": "^1.0.2",
    "shortid": "^2.2.15",
    "winston": "^3.3.3",
    "xml2js": "^0.4.23"
  },
  "devDependencies": {
    "@types/app-root-path": "^1.2.4",
    "@types/classnames": "^2.2.9",
    "@types/connect-history-api-fallback": "^1.3.3",
    "@types/cors": "^2.8.6",
    "@types/express": "^4.17.2",
    "@types/jest": "^23.3.14",
    "@types/mongodb": "^3.3.16",
    "@types/morgan": "^1.7.37",
    "@types/node": "^10.17.16",
    "@types/react": "^16.9.23",
    "@types/react-autosuggest": "^9.3.13",
    "@types/react-dom": "^16.9.5",
    "@types/react-router-dom": "^4.3.5",
    "@types/react-select": "^2.0.19",
    "@types/shortid": "0.0.29",
    "@types/xml2js": "^0.4.5",
    "cross-env": "^5.2.1",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.2",
    "eslint": "^6.8.0",
    "eslint-config-airbnb-base": "^13.2.0",
    "eslint-config-prettier": "^4.3.0",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-prettier": "^3.1.2",
    "husky": "^2.7.0",
    "nodemon": "^1.19.4",
    "npm-run-all": "^4.1.3",
    "prettier": "^1.19.1",
    "react-test-renderer": "^16.13.0",
    "request": "^2.88.2",
    "request-animation-frame": "^0.1.1",
    "ts-jest": "^26.4.1",
    "typescript": "^3.8.2"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ]
}
